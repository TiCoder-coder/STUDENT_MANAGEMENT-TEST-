{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false
  },
  "include": [
    "server.ts",
    "Controller/**/*.ts",
    "Dtos/**/*.ts",
    "Enums/**/*.ts",
    "Middleware/**/*.ts",
    "Repositories/**/*.ts",
    "Service/**/*.ts",
    "ConnectDatabase/**/*.ts",
    "src/tsoa/**/*.ts",
    "tsoa.json"
  ]
}
